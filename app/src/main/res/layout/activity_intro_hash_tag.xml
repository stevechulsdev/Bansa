<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro.view.IntroHashTagActivity">

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="26dp"
        android:textSize="12sp"
        android:textColor="#666666"
        android:letterSpacing="-0.08"
        android:lineSpacingExtra="10sp"
        android:text="건너뛰기  &gt;" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_skip"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginStart="26dp"
        android:textSize="24sp"
        android:textColor="#444444"
        android:letterSpacing="-0.08"
        android:lineSpacingExtra="8sp"
        android:text="당신이 찾는 반지 정보를\n선택 해주세요" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="290dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/gradient_start_button"
        android:text="반지앱 시작하기"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.08"
        android:lineSpacingExtra="8sp"
        android:layout_marginBottom="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>