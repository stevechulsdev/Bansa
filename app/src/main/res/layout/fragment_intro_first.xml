<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_top_img"
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:background="@drawable/gradient_splash"
        android:src="@drawable/intro_first_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_first_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_top_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="24sp"
        android:textColor="#444444"
        android:letterSpacing="-0.08"
        android:lineSpacingExtra="8sp"
        android:text="#해시태그 선택으로\n나만의 반지 찾기"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_second_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_info"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"
        android:textColor="#666666"
        android:letterSpacing="-0.08"
        android:lineSpacingExtra="8sp"
        android:text="다음의 해시태그 선택화면에서 방문자님의 태그를\n고르면 그에 맞는 맞춤 반지 정보 리스트를\n가장 먼저 볼 수 있습니다."
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:src="@drawable/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>