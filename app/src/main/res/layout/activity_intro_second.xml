<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro.view.IntroSecondActivity">

    <ImageView
        android:id="@+id/iv_top_img"
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:background="@drawable/gradient_splash"
        android:src="@drawable/intro_first_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_first_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_top_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        android:textColor="#444444"
        android:letterSpacing="-0.08"
        android:lineSpacingExtra="8sp"
        android:text="간편 반지 정보 검색\n반사 앱"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_second_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_info"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:textColor="#666666"
        android:letterSpacing="-0.08"
        android:lineSpacingExtra="8sp"
        android:text="필요한 바닞 정보를 해시태그 검색으로 바로 찾고\n원하는 반지는 간편하게 나의 보석함에 쏙!\n반사 앱으로 나마의 반지를 찾아보세요."
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:src="@drawable/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>